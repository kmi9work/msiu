<% form_tag({:action => :edit_commit}, {:name => 'providings_form'}) do %>
<%= hidden_field_tag('providing[item_id]', @item.item.id)  %>
<%= hidden_field_tag('id', @item.id)  %>
<table class = "edit">
  <caption>
    Редактирование информации о поставке товара &quot;<%= @item.item.name %>&quot;
  </caption>
  <thead>
    <tr>
      <th colspan = "2">
        <%= submit_tag('Изменить')  %>
        <%= button_to_function('Отмена',
          "document.providings_form.action = '#{url_for(:action => :list)}';
           document.providings_form.submit();")  %>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Поставщик:</th>
      <td><%= provider_select('providing[provider_id]', @item.provider_id)  %></td>
    </tr>
    <tr>
      <th>Цена:</th>
      <td><%= text_field_tag('providing[price]', @item.price, :size => 10)  %></td>
    </tr>
    <tr>
      <th>Количество:</th>
      <td><%= text_field_tag('providing[quantity]', @item.quantity, :size => 5)  %></td>
    </tr>
    <tr>
      <th>Дата поставки:</th>
      <td><%= text_field_tag('providing[providing_date]', @item.providing_date, :size => 10)  %></td>
    </tr>
    <tr>
      <th>Контракт:</th>
      <td><%= text_field_tag('providing[contract]', @item.contract, :size => 20)  %></td>
    </tr>
  </tbody>
</table>
<% end %>
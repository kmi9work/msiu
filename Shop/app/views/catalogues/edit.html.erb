<% form_tag({:action => :edit_commit}, {:name => 'catalogues_form'}) do %>
<%= hidden_field_tag('catalogue[id]', @item.id)  %>
<table class = "edit">
  <caption>Редактирование каталога</caption>
  <thead>
    <tr>
      <th colspan = "2">
        <%= submit_tag('Изменить')  %>
        <%= button_to_function('Отмена',
          "document.catalogues_form.action = '#{url_for(:action => :list)}';
           document.catalogues_form.submit();")  %>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Название каталога:</th>
      <td><%= text_field_tag('catalogue[name]', @item.name, :size => 20)  %></td>
    </tr>
    <tr>
      <th>Описание каталога:</th>
      <td><%= text_field_tag('catalogue[info]', @item.info, :size => 20)  %></td>
    </tr>
  </tbody>
</table>
<% end %>

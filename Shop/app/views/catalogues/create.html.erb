<% form_tag({:action => :create_commit}, {:name => 'catalogues_form'}) do %>
<table class = "edit">
  <caption>Создание нового каталога</caption>
  <thead>
    <tr>
      <th colspan = "2">
        <%= submit_tag('Создать')  %>
        <%= button_to_function('Отмена',
          "document.catalogues_form.action = '#{url_for(:action => :list)}';
           document.catalogues_form.submit();")  %>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Название каталога:</th>
      <td><%= text_field_tag('catalogue[name]', '', :size => 20)  %></td>
    </tr>
    <tr>
      <th>Описание каталога:</th>
      <td><%= text_field_tag('catalogue[info]', '', :size => 20)  %></td>
    </tr>
  </tbody>
</table>
<% end %>

<% form_tag({:action => :create_commit}, {:name => 'storages_form'}) do %>
<table class = "edit">
  <caption>Создание нового склад</caption>
  <thead>
    <tr>
      <th colspan = "2">
        <%= submit_tag('Создать')  %>
        <%= button_to_function('Отмена',
          "document.storages_form.action = '#{url_for(:action => :list)}';
           document.storages_form.submit();")  %>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Название склада:</th>
      <td><%= text_field_tag('storage[name]', '', :size => 20)  %></td>
    </tr>
    <tr>
      <th>Описание склада:</th>
      <td><%= text_field_tag('storage[info]', '', :size => 20)  %></td>
    </tr>
  </tbody>
</table>
<% end %>
